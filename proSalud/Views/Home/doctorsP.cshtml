@* Doctores
Schedules
Consultation Statistics *@

@*Doctors*@

<div class="area-container">
    <h2 class="subtitle">Doctors</h2>

    <!-- Add Button Section -->
    <div class="button-container">
        <button data-modal="doctorModal" class="btnAddRegister">
            Add New Doctor
        </button>
    </div>

    <!-- Doctors List Section -->
    <div class="doctors-list">
        <table class="appointments-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Specialty</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="doctorsTableBody">
                <!-- Data will be populated dynamically -->
            </tbody>
        </table>
    </div>

    <!-- Modal for Add/Edit Doctor -->
    <div id="doctorModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>

            <div class="modal-header">
                <h2 id="modalTitle">Add New Doctor</h2>
            </div>

            <div class="modal-body">
                <form id="doctorForm">
                    <input type="hidden" id="doctorId" name="doctorId" />

                    <div class="form-row">
                        <div class="form-group">
                            <label for="firstnameDoctor">First Name</label>
                            <input type="text"
                                   id="firstnameDoctor"
                                   name="firstnameDoctor"
                                   class="form-control"
                                   placeholder="First name Doctor..."
                                   required>
                        </div>

                        <div class="form-group">
                            <label for="lastnameDoctor">Last Name</label>
                            <input type="text"
                                   id="lastnameDoctor"
                                   name="lastnameDoctor"
                                   class="form-control"
                                   placeholder="Last name Doctor..."
                                   required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="Specialty">Specialty</label>
                        <input type="text"
                               id="Specialty"
                               name="Specialty"
                               class="form-control"
                               placeholder="Specialty..."
                               required>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="phone">Phone</label>
                            <input type="tel"
                                   id="phone"
                                   name="phone"
                                   class="form-control"
                                   placeholder="Phone..."
                                   required>
                        </div>

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email"
                                   id="email"
                                   name="email"
                                   class="form-control"
                                   placeholder="Email..."
                                   required>
                        </div>
                    </div>

                    <div class="details-section">
                        <h3>Schedule Details</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="date">Working Days</label>
                                <select id="date" name="date" class="form-control" multiple>
                                    <option value="Monday">Monday</option>
                                    <option value="Tuesday">Tuesday</option>
                                    <option value="Wednesday">Wednesday</option>
                                    <option value="Thursday">Thursday</option>
                                    <option value="Friday">Friday</option>
                                    <option value="Saturday">Saturday</option>
                                    <option value="Sunday">Sunday</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="start">Start Time</label>
                                <input type="time"
                                       id="start"
                                       name="start"
                                       class="form-control">
                            </div>

                            <div class="form-group">
                                <label for="end">End Time</label>
                                <input type="time"
                                       id="end"
                                       name="end"
                                       class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="details-section">
                        <h3>Statistics</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="totalConsultations">Total Consultations</label>
                                <input type="number"
                                       id="totalConsultations"
                                       name="totalConsultations"
                                       class="form-control"
                                       placeholder="Total Consultations..."
                                       readonly>
                            </div>

                            <div class="form-group">
                                <label for="dateConsultations">Last Consultation</label>
                                <input type="date"
                                       id="dateConsultations"
                                       name="dateConsultations"
                                       class="form-control"
                                       readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn-cancel" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn-save">Save Doctor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>